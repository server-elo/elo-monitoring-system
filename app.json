{
  "name": "Enterprise Monitoring System",
  "description": "Production-ready multi-PC monitoring system with remote connectivity and 12-factor compliance",
  "repository": "https://github.com/your-username/enterprise-monitoring-system",
  "logo": "https://via.placeholder.com/200x200/2c3e50/ffffff?text=Monitor",
  "keywords": [
    "monitoring",
    "12-factor",
    "enterprise",
    "multi-pc",
    "remote",
    "nodejs"
  ],
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Runtime environment",
      "value": "production",
      "required": true
    },
    "API_SECRET_KEY": {
      "description": "Secret key for API authentication",
      "generator": "secret",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT signing secret",
      "generator": "secret",
      "required": true
    },
    "API_RATE_LIMIT": {
      "description": "API rate limit per minute",
      "value": "100",
      "required": false
    },
    "CORS_ORIGINS": {
      "description": "Allowed CORS origins (comma-separated)",
      "value": "https://your-app.herokuapp.com",
      "required": false
    },
    "SSL_ENABLED": {
      "description": "Enable SSL/HTTPS",
      "value": "true",
      "required": false
    },
    "LOG_LEVEL": {
      "description": "Logging level",
      "value": "info",
      "required": false
    },
    "LOG_FORMAT": {
      "description": "Log format (console or json)",
      "value": "json",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'Enterprise Monitoring System deployed successfully!'"
  }
}