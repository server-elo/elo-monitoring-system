# Test Environment Configuration - Perfect 12-Factor Compliance
NODE_ENV=test

# Application
PORT=3000
HOST=0.0.0.0
HOSTNAME=localhost

# Database (Test)
DATABASE_URL=postgresql://test:test@localhost:5432/solanalearn_test
DATABASE_POOL_SIZE=5
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=30000

# Redis (Test)
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_ENABLED=false
REDIS_MAX_RETRIES=3

# Security (Test secrets)
NEXTAUTH_SECRET=test-secret-32-characters-long-for-testing-purposes-only
NEXTAUTH_URL=http://localhost:3000
SESSION_SECRET=test-session-secret-32-characters-long-for-testing
JWT_SECRET=test-jwt-secret-32-characters-long-for-testing-only
CORS_ORIGIN=http://localhost:3000

# API Keys (Test)
GEMINI_API_KEY=test-gemini-api-key
GITHUB_CLIENT_ID=test-github-client-id
GITHUB_CLIENT_SECRET=test-github-client-secret
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
SENTRY_DSN=https://test@sentry.io/project

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_WORKERS=2
CLUSTER_MAX_RESTARTS=3
CLUSTER_RESTART_DELAY=1000
CLUSTER_DEV_ENABLED=false

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_CACHE=true
ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# External Services
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
VERCEL_URL=

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=false

# Performance
CACHE_TTL=300
SESSION_TIMEOUT=86400