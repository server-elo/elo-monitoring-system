{
  "monitoring": {
    "enabled": true,
    "multi_pc_mode": true,
    "central_dashboard": {
      "enabled": true,
      "port": 3002,
      "aggregation_interval": 10
    },
    "pc_instances": {
      "pc1": {
        "name": "Main Development PC",
        "user": "elo",
        "endpoints": [
          {
            "name": "main_app",
            "url": "http://localhost:3000/api/health",
            "interval": 30,
            "timeout": 5000,
            "expected_status": 200
          },
          {
            "name": "database",
            "url": "http://localhost:3000/api/health/db",
            "interval": 60,
            "timeout": 3000,
            "expected_status": 200
          }
        ]
      },
      "pc2": {
        "name": "Secondary Development PC",
        "user": "user2",
        "endpoints": [
          {
            "name": "main_app",
            "url": "http://localhost:3000/api/health",
            "interval": 30,
            "timeout": 5000,
            "expected_status": 200
          },
          {
            "name": "staging_app",
            "url": "http://localhost:3001/api/health",
            "interval": 45,
            "timeout": 5000,
            "expected_status": 200
          }
        ]
      }
    },
    "health_checks": {
      "enabled": true,
      "endpoints": [
        {
          "name": "main_app",
          "url": "http://localhost:3000/api/health",
          "interval": 30,
          "timeout": 5000,
          "expected_status": 200,
          "critical": true
        },
        {
          "name": "database",
          "url": "http://localhost:3000/api/health/db",
          "interval": 60,
          "timeout": 3000,
          "expected_status": 200,
          "critical": true
        }
      ]
    },
    "performance_metrics": {
      "enabled": true,
      "collect_interval": 10,
      "metrics": [
        "response_time",
        "throughput",
        "error_rate",
        "cpu_usage",
        "memory_usage",
        "active_connections"
      ],
      "thresholds": {
        "response_time_ms": 500,
        "error_rate_percent": 1,
        "cpu_usage_percent": 80,
        "memory_usage_percent": 85
      }
    },
    "alerts": {
      "enabled": true,
      "pc_separation": true,
      "channels": [
        {
          "type": "console",
          "severity": ["info", "warning", "critical", "error"]
        },
        {
          "type": "email",
          "recipients": ["admin@example.com"],
          "severity": ["critical", "error"],
          "pc_filter": "all"
        }
      ],
      "rules": [
        {
          "name": "high_error_rate",
          "condition": "error_rate > 5",
          "severity": "critical",
          "cooldown_minutes": 5,
          "pc_specific": true
        },
        {
          "name": "high_response_time",
          "condition": "avg_response_time > 1000",
          "severity": "warning",
          "cooldown_minutes": 10,
          "pc_specific": true
        },
        {
          "name": "service_down",
          "condition": "health_check_failed",
          "severity": "critical",
          "cooldown_minutes": 2,
          "pc_specific": true
        }
      ]
    },
    "dashboards": {
      "enabled": true,
      "refresh_interval": 5,
      "pc_separation": true,
      "widgets": [
        {
          "type": "pc_overview",
          "title": "PC Status Overview",
          "show_all_pcs": true
        },
        {
          "type": "line_chart",
          "title": "Response Times by PC",
          "metric": "response_time",
          "period": "1h",
          "group_by": "pc"
        },
        {
          "type": "alert_summary",
          "title": "Alerts by PC",
          "group_by": "pc"
        }
      ]
    }
  }
}