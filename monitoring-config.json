{
  "monitoring": {
    "health_checks": {
      "enabled": true,
      "endpoints": [
        {
          "name": "main_app",
          "url": "http://localhost:3000/api/health",
          "interval": 30,
          "timeout": 5000,
          "expected_status": 200
        },
        {
          "name": "database",
          "url": "http://localhost:3000/api/health/db",
          "interval": 60,
          "timeout": 3000,
          "expected_status": 200
        }
      ]
    },
    "performance_metrics": {
      "enabled": true,
      "collect_interval": 10,
      "metrics": [
        "response_time",
        "throughput",
        "error_rate",
        "cpu_usage",
        "memory_usage",
        "active_connections"
      ],
      "thresholds": {
        "response_time_ms": 500,
        "error_rate_percent": 1,
        "cpu_usage_percent": 80,
        "memory_usage_percent": 85
      }
    },
    "resource_monitoring": {
      "enabled": true,
      "track": {
        "cpu": true,
        "memory": true,
        "disk": true,
        "network": true
      },
      "sampling_interval": 5
    },
    "error_tracking": {
      "enabled": true,
      "capture_stack_traces": true,
      "ignore_patterns": [
        ".*favicon.*",
        ".*robots.txt.*"
      ],
      "severity_levels": ["error", "fatal"]
    },
    "log_aggregation": {
      "enabled": true,
      "sources": [
        {
          "name": "app_logs",
          "path": "/var/log/app/*.log",
          "format": "json"
        },
        {
          "name": "error_logs",
          "path": "/var/log/app/error.log",
          "format": "text"
        }
      ],
      "retention_days": 30,
      "compression": true
    },
    "alerts": {
      "enabled": true,
      "channels": [
        {
          "type": "email",
          "recipients": ["admin@example.com"],
          "severity": ["critical", "error"]
        },
        {
          "type": "webhook",
          "url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
          "severity": ["critical"]
        }
      ],
      "rules": [
        {
          "name": "high_error_rate",
          "condition": "error_rate > 5",
          "severity": "critical",
          "cooldown_minutes": 5
        },
        {
          "name": "high_response_time",
          "condition": "avg_response_time > 1000",
          "severity": "warning",
          "cooldown_minutes": 10
        },
        {
          "name": "low_memory",
          "condition": "memory_usage > 90",
          "severity": "critical",
          "cooldown_minutes": 5
        }
      ]
    },
    "dashboards": {
      "enabled": true,
      "refresh_interval": 5,
      "widgets": [
        {
          "type": "line_chart",
          "title": "Response Times",
          "metric": "response_time",
          "period": "1h"
        },
        {
          "type": "gauge",
          "title": "CPU Usage",
          "metric": "cpu_usage",
          "thresholds": [60, 80, 90]
        },
        {
          "type": "counter",
          "title": "Active Users",
          "metric": "active_users"
        },
        {
          "type": "heatmap",
          "title": "Error Distribution",
          "metric": "errors_by_endpoint"
        }
      ]
    },
    "integrations": {
      "prometheus": {
        "enabled": true,
        "port": 9090,
        "metrics_path": "/metrics"
      },
      "grafana": {
        "enabled": true,
        "dashboards": ["app-overview", "performance", "errors"]
      },
      "datadog": {
        "enabled": false,
        "api_key": "YOUR_API_KEY"
      }
    }
  }
}