# Environment Configuration Template
# Copy to .env.development, .env.staging, .env.production

# Application
NODE_ENV=development
PORT=3001

# Security
API_SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
API_RATE_LIMIT=100

# Remote Connectivity
CENTRAL_SERVICE_URL=http://localhost:3001
NGROK_ENABLED=false
NGROK_SUBDOMAIN=

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3002
CORS_CREDENTIALS=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
DISCOVERY_INTERVAL=10000
PC_TIMEOUT=300000

# Cloud Deployment
HEROKU_APP_NAME=
RAILWAY_PROJECT_ID=
DOMAIN_NAME=

# SSL/HTTPS
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database (future)
DATABASE_URL=
REDIS_URL=